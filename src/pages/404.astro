---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found" noIndex>
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-32 md:py-48 text-center">
    <p class="text-8xl font-bold text-accent-200 dark:text-accent-900 select-none">404</p>
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white mt-4 mb-4">Page Not Found</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-10">
      The page you're looking for doesn't exist or has been moved.
    </p>
    <div class="flex flex-wrap justify-center gap-3">
      <a href="/"
         class="inline-flex items-center gap-2 px-6 py-3 bg-accent-600 hover:bg-accent-700 text-white font-medium rounded-lg transition-colors">
        Go Home
      </a>
      <a href="/blog/"
         class="inline-flex items-center gap-2 px-6 py-3 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 font-medium rounded-lg transition-colors">
        Browse Blog
      </a>
    </div>
  </div>
</BaseLayout>