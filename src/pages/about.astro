---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { resumeData } from '@/data/resume';

const timeline = [
  { year: '2025 – Present', title: 'Officer', org: 'Competive Programming Club', type: 'extracurricular' },
  { year: '2024 – Present', title: 'Software and Systems Engineer', org: 'Vanguard Engineering Competition Team', type: 'extracurricular' },
  { year: '2023 – 2027', title: 'B.S. Computer Engineering', org: 'Liberty University', type: 'edu' },
];
---

<BaseLayout title="About">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24">
    <!-- Bio -->
    <section class="mb-20">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-8">About Me</h1>
      <div class="flex flex-col md:flex-row gap-10 items-start">
        <div class="flex-shrink-0">
          <div class="h-40 w-40 rounded-2xl bg-gradient-to-br from-accent-400 to-accent-700 flex items-center justify-center shadow-lg">
            <span class="text-white text-5xl font-bold">
              {resumeData.name.split(' ').map(n => n[0]).join('')}
            </span>
          </div>
        </div>
        <div class="space-y-4 text-gray-600 dark:text-gray-300 text-lg leading-relaxed">
          <p>{resumeData.summary}</p>
          <p>
            Beyond computers, I enjoy hiking, basketball, playing guitar, and just learning random stuff. 
          </p>
          <p>
            I'm currently a junior, looking for internships and other opportunities to apply what I have learned.
          </p>
          <div class="pt-2 flex flex-wrap gap-3">
            <a href={`mailto:${resumeData.email}`}
               class="inline-flex items-center gap-2 px-5 py-2.5 bg-accent-600 hover:bg-accent-700 text-white font-medium rounded-lg transition-colors text-sm">
              Get in Touch
            </a>
            <a href="/resume/"
               class="inline-flex items-center gap-2 px-5 py-2.5 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 font-medium rounded-lg transition-colors text-sm">
              View Resume
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Skills -->
    <section class="mb-20">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">Skills & Technologies</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        {Object.entries(resumeData.skills).map(([category, items]) => (
          <div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 rounded-xl p-5">
            <h3 class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-3">
              {category}
            </h3>
            <div class="flex flex-wrap gap-2">
              {items.map((skill) => (
                <span class="text-sm bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 px-3 py-1 rounded-full">
                  {skill}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Timeline -->
    <section>
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">Experience & Education</h2>
      <div class="relative">
        <!-- Vertical line -->
        <div class="absolute left-5 top-0 bottom-0 w-0.5 bg-gray-200 dark:bg-gray-800"></div>

        <div class="space-y-8">
          {timeline.map((item) => (
            <div class="relative pl-14">
              <!-- Dot -->
              <div class:list={[
                'absolute left-3.5 -translate-x-1/2 h-3 w-3 rounded-full border-2 border-white dark:border-gray-950',
                item.type === 'work'
                  ? 'bg-accent-500'
                  : 'bg-gray-400 dark:bg-gray-500',
              ]}></div>

              <div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 rounded-xl p-5">
                <div class="flex items-start justify-between gap-4 flex-wrap">
                  <div>
                    <h3 class="font-semibold text-gray-900 dark:text-white">{item.title}</h3>
                    <p class="text-accent-600 dark:text-accent-400 text-sm mt-0.5">{item.org}</p>
                  </div>
                  <span class="text-xs font-medium text-gray-500 dark:text-gray-400 bg-gray-100 dark:bg-gray-800 px-2.5 py-1 rounded-full whitespace-nowrap">
                    {item.year}
                  </span>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  </div>
</BaseLayout>