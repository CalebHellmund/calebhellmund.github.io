---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { resumeData } from '@/data/resume';
import { siteConfig } from '@/data/siteConfig';
---

<BaseLayout title="Resume" description="Professional resume of Caleb Hellmund — Computer Engineer">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24">
    <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-6 mb-12">
      <div>
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-2">Resume</h1>
        <p class="text-gray-500 dark:text-gray-400">Last updated 2026</p>
      </div>
      <a href="./calebhellmundresume.pdf"
         download
         class="inline-flex items-center gap-2 px-6 py-3 bg-accent-600 hover:bg-accent-700 text-white font-medium rounded-lg transition-colors shadow-sm hover:shadow-md text-sm">
        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
        </svg>
        Download PDF
      </a>
    </div>

    <!-- Resume card -->
    <div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 rounded-2xl overflow-hidden shadow-sm">
      <!-- Name / contact banner -->
      <div class="bg-gradient-to-r from-accent-600 to-accent-700 px-8 py-8 text-white">
        <h2 class="text-3xl font-bold">{resumeData.name}</h2>
        <p class="text-accent-100 mt-1 text-lg">{resumeData.title}</p>
        <div class="mt-4 flex flex-wrap gap-x-6 gap-y-2 text-sm text-accent-100">
          <a href={`mailto:${resumeData.email}`} class="hover:text-white transition-colors">{resumeData.email}</a>
          <a href={resumeData.github} target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors">GitHub</a>
          <a href={resumeData.linkedin} target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors">LinkedIn</a>
        </div>
      </div>

      <div class="p-8 space-y-10">
        <!-- Summary -->
        <section>
          <h3 class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-widest mb-3">Summary</h3>
          <p class="text-gray-700 dark:text-gray-300 leading-relaxed">{resumeData.summary}</p>
        </section>

        <!-- Skills Highlights -->
        <section>
          <h3 class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-widest mb-4">Skills</h3>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            {Object.entries(resumeData.skills).map(([cat, items]) => (
              <div>
                <p class="text-sm font-medium text-gray-900 dark:text-white mb-2 capitalize">{cat}</p>
                <p class="text-sm text-gray-600 dark:text-gray-400">{items.join(' · ')}</p>
              </div>
            ))}
          </div>
        </section>

        
        <!-- Education -->
        <section>
          <h3 class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-widest mb-6">Education</h3>
          {resumeData.education.map((edu) => (
            <div class="relative pl-6 border-l-2 border-gray-200 dark:border-gray-700">
              <div class="flex items-start justify-between gap-4 flex-wrap mb-2">
                <div>
                  <h4 class="font-semibold text-gray-900 dark:text-white">{edu.degree}</h4>
                  <p class="text-accent-600 dark:text-accent-400 text-sm">{edu.institution}</p>
                </div>
                <span class="text-xs text-gray-500 dark:text-gray-400 bg-gray-100 dark:bg-gray-800 px-2.5 py-1 rounded-full">
                  {edu.period}
                </span>
              </div>
              <p class="text-sm text-gray-600 dark:text-gray-400">{edu.notes}</p>
            </div>
          ))}
        </section>


        <!-- Experience -->
        <section>
          <h3 class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-widest mb-6">Experience</h3>
          <div class="space-y-8">
            {resumeData.experience.map((exp) => (
              <div class="relative pl-6 border-l-2 border-gray-200 dark:border-gray-700">
                <div class="flex items-start justify-between gap-4 flex-wrap mb-3">
                  <div>
                    <h4 class="font-semibold text-gray-900 dark:text-white">{exp.role}</h4>
                    <p class="text-accent-600 dark:text-accent-400 text-sm">{exp.company}</p>
                  </div>
                  <span class="text-xs text-gray-500 dark:text-gray-400 bg-gray-100 dark:bg-gray-800 px-2.5 py-1 rounded-full">
                    {exp.period}
                  </span>
                </div>
                <ul class="space-y-1.5">
                  {exp.bullets.map((b) => (
                    <li class="text-sm text-gray-600 dark:text-gray-400 flex items-start gap-2">
                      <span class="text-accent-500 mt-1 flex-shrink-0">▸</span>
                      {b}
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </div>
        </section>

        
      </div>
    </div>

    <p class="text-center text-sm text-gray-400 dark:text-gray-600 mt-6">
      For the best formatted version, download the PDF above.
    </p>
  </div>
</BaseLayout>