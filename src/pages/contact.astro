---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { siteConfig } from '@/data/siteConfig';
---

<BaseLayout title="Contact" description="Get in touch with Alex Johnson — open to collaborations, opportunities, and interesting conversations.">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24">
    <div class="max-w-2xl mx-auto">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">Get in Touch</h1>
      <p class="text-lg text-gray-600 dark:text-gray-300 mb-12">
        I'm always open to interesting conversations, collaboration ideas, and new opportunities.
        Drop me a message and I'll get back to you within a few days.
      </p>

      <!-- Social links -->
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-12">
        <a href={`mailto:${siteConfig.email}`}
           class="flex items-center gap-3 p-4 bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 rounded-xl hover:border-accent-400 dark:hover:border-accent-600 transition-colors">
          <div class="h-10 w-10 bg-accent-100 dark:bg-accent-900/40 rounded-lg flex items-center justify-center flex-shrink-0">
            <svg class="h-5 w-5 text-accent-600 dark:text-accent-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <div>
            <p class="text-xs text-gray-500 dark:text-gray-400">Email</p>
            <p class="text-sm font-medium text-gray-900 dark:text-white truncate">{siteConfig.email}</p>
          </div>
        </a>

        <a href={siteConfig.github} target="_blank" rel="noopener noreferrer"
           class="flex items-center gap-3 p-4 bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 rounded-xl hover:border-accent-400 dark:hover:border-accent-600 transition-colors">
          <div class="h-10 w-10 bg-gray-100 dark:bg-gray-800 rounded-lg flex items-center justify-center flex-shrink-0">
            <svg class="h-5 w-5 text-gray-700 dark:text-gray-300" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
            </svg>
          </div>
          <div>
            <p class="text-xs text-gray-500 dark:text-gray-400">GitHub</p>
            <p class="text-sm font-medium text-gray-900 dark:text-white">yourusername</p>
          </div>
        </a>

        <a href={siteConfig.linkedin} target="_blank" rel="noopener noreferrer"
           class="flex items-center gap-3 p-4 bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 rounded-xl hover:border-accent-400 dark:hover:border-accent-600 transition-colors">
          <div class="h-10 w-10 bg-blue-50 dark:bg-blue-950/40 rounded-lg flex items-center justify-center flex-shrink-0">
            <svg class="h-5 w-5 text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
            </svg>
          </div>
          <div>
            <p class="text-xs text-gray-500 dark:text-gray-400">LinkedIn</p>
            <p class="text-sm font-medium text-gray-900 dark:text-white">yourusername</p>
          </div>
        </a>
      </div>

      <!-- Contact form -->
      <div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 rounded-2xl p-8">
        <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-6">Send a Message</h2>
        <form id="contact-form" class="space-y-5" novalidate>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1.5">Name</label>
              <input type="text" id="name" name="name" required
                     placeholder="Your name"
                     class="w-full px-4 py-2.5 bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg text-gray-900 dark:text-gray-100 placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-accent-500 focus:border-transparent transition-colors text-sm" />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1.5">Email</label>
              <input type="email" id="email" name="email" required
                     placeholder="you@example.com"
                     class="w-full px-4 py-2.5 bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg text-gray-900 dark:text-gray-100 placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-accent-500 focus:border-transparent transition-colors text-sm" />
            </div>
          </div>

          <div>
            <label for="subject" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1.5">Subject</label>
            <input type="text" id="subject" name="subject"
                   placeholder="What's this about?"
                   class="w-full px-4 py-2.5 bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg text-gray-900 dark:text-gray-100 placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-accent-500 focus:border-transparent transition-colors text-sm" />
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1.5">Message</label>
            <textarea id="message" name="message" required rows="5"
                      placeholder="Tell me what's on your mind…"
                      class="w-full px-4 py-2.5 bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg text-gray-900 dark:text-gray-100 placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-accent-500 focus:border-transparent transition-colors text-sm resize-none"></textarea>
          </div>

          <button type="submit"
                  class="w-full sm:w-auto px-8 py-3 bg-accent-600 hover:bg-accent-700 text-white font-medium rounded-lg transition-colors shadow-sm hover:shadow-md text-sm">
            Send Message
          </button>

          <div id="form-success" class="hidden p-4 bg-green-50 dark:bg-green-950/30 border border-green-200 dark:border-green-800 rounded-lg text-green-700 dark:text-green-300 text-sm">
            ✓ Thanks for reaching out! I'll get back to you soon.
          </div>
          <div id="form-error" class="hidden p-4 bg-red-50 dark:bg-red-950/30 border border-red-200 dark:border-red-800 rounded-lg text-red-700 dark:text-red-300 text-sm">
            Please fill in all required fields.
          </div>
        </form>
      </div>

      <p class="text-center text-sm text-gray-400 dark:text-gray-600 mt-6">
        This form is for demo purposes — no backend is connected.
      </p>
    </div>
  </div>
</BaseLayout>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const success = document.getElementById('form-success')!;
  const error = document.getElementById('form-error')!;

  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    const name = (document.getElementById('name') as HTMLInputElement).value.trim();
    const email = (document.getElementById('email') as HTMLInputElement).value.trim();
    const message = (document.getElementById('message') as HTMLTextAreaElement).value.trim();

    if (!name || !email || !message) {
      error.classList.remove('hidden');
      success.classList.add('hidden');
      return;
    }

    error.classList.add('hidden');
    success.classList.remove('hidden');
    form.reset();
  });
</script>