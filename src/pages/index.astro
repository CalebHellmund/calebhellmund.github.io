---
import BaseLayout from '@/layouts/BaseLayout.astro';
import ProjectCard from '@/components/ProjectCard.astro';
import BlogCard from '@/components/BlogCard.astro';
import { siteConfig } from '@/data/siteConfig';
import { getFeaturedProjects } from '@/data/projects';
import { getCollection } from 'astro:content';
import { resumeData } from '@/data/resume';

const featuredProjects = getFeaturedProjects();

const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const recentPosts = allPosts
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);
---

<BaseLayout>
  <!-- Hero -->
  <section class="relative overflow-hidden bg-gradient-to-br from-white via-accent-50/30 to-white dark:from-gray-950 dark:via-accent-950/20 dark:to-gray-950 py-24 md:py-36">
    <!-- Decorative blobs -->
    <div class="pointer-events-none absolute -top-32 -right-32 h-96 w-96 rounded-full bg-accent-200/30 dark:bg-accent-800/10 blur-3xl"></div>
    <div class="pointer-events-none absolute -bottom-32 -left-32 h-96 w-96 rounded-full bg-accent-100/40 dark:bg-accent-900/10 blur-3xl"></div>

    <div class="relative max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <p class="text-accent-600 dark:text-accent-400 font-medium mb-4 text-sm tracking-wide uppercase">Computer Engineering Student</p>
        <h1 class="text-5xl md:text-6xl font-bold text-gray-900 dark:text-white leading-tight mb-6">
          Hi, I'm <span class="text-accent-600 dark:text-accent-400">{siteConfig.name}</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 mb-10 leading-relaxed">
          {siteConfig.tagline}
        </p>
        <div class="flex flex-wrap gap-3">
          <a href="/projects"
             class="inline-flex items-center gap-2 px-6 py-3 bg-accent-600 hover:bg-accent-700 text-white font-medium rounded-lg transition-colors duration-200 shadow-sm hover:shadow-md">
            View Projects
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a href="/blog"
             class="inline-flex items-center gap-2 px-6 py-3 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 text-gray-700 dark:text-gray-200 font-medium rounded-lg border border-gray-200 dark:border-gray-700 transition-colors duration-200">
            Read Blog
          </a>
          <a href="/resume"
             class="inline-flex items-center gap-2 px-6 py-3 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 text-gray-700 dark:text-gray-200 font-medium rounded-lg border border-gray-200 dark:border-gray-700 transition-colors duration-200">
            Resume
          </a>
          <a href={`mailto:${resumeData.email}`}
             class="inline-flex items-center gap-2 px-6 py-3 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 text-gray-700 dark:text-gray-200 font-medium rounded-lg border border-gray-200 dark:border-gray-700 transition-colors duration-200">
            Contact
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Projects -->
  <section class="py-20 bg-white dark:bg-gray-950">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-end justify-between mb-10">
        <div>
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white">Featured Projects</h2>
          <p class="text-gray-500 dark:text-gray-400 mt-2">Things I've built that I'm proud of</p>
        </div>
        <a href="/projects" class="text-sm font-medium text-accent-600 dark:text-accent-400 hover:text-accent-700 dark:hover:text-accent-300 transition-colors">
          All projects →
        </a>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {featuredProjects.map((project) => (
          <ProjectCard project={project} />
        ))}
      </div>
    </div>
  </section>

  <!-- Recent Posts -->
  <section class="py-20 bg-gray-50 dark:bg-gray-900/50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-end justify-between mb-10">
        <div>
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white">Recent Posts</h2>
          <p class="text-gray-500 dark:text-gray-400 mt-2">Thoughts, tutorials, and deep dives</p>
        </div>
        <a href="/blog" class="text-sm font-medium text-accent-600 dark:text-accent-400 hover:text-accent-700 dark:hover:text-accent-300 transition-colors">
          All posts →
        </a>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {recentPosts.map((post) => (
          <BlogCard post={post} />
        ))}
      </div>
    </div>
  </section>
</BaseLayout>